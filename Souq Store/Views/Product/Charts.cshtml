

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>



<div>
    <canvas id="myChart"></canvas>
</div>

<script>

    $(document).ready(function () {

        $.ajax({

            type:"GET",
            url:"https://localhost:44323/Product/GetAllProducts",
            contentType:"application/json;charset=utf-8",
            dataType:"json",
            success: function (response) {

                const labels = response.map(p => p.name);

                const values = response.map(p => p.price);

                const data = {
                    labels: labels,
                    datasets: [{
                        label: 'My First dataset',
                        backgroundColor: ['green', 'cyan', 'red', 'blue', '#445533', '#225588'],
                        borderColor: ['blue', 'magenta', 'green', 'cyan', '#332244', '#775533'],
                        data: values,
                    }]
                };

                const config = {
                    type: 'bar',
                    data: data,
                    options: {
                        plugins: {
                            title: {
                                display: true,
                                text: 'Chart Title',

                            }
                        }
                    }
                };

                const myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
            },
            error: function (response) {
                console.log(response)
            }
        });

    });

    

</script>

